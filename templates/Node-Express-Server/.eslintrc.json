{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": ["airbnb-base", "plugin:node/recommended"],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"no-unused-vars": "warn",
		"no-console": "off",
		"class-methods-use-this": "off",
		"no-empty": "error",
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"indent": "off",
		"no-useless-escape": "off",
		"node/shebang": "off",
		"comma-dangle": "off",
		"node/no-unsupported-features/es-syntax": "off",
		"no-process-exit": "off"
	},
	"ignorePatterns": ["node_modules/"]
}
